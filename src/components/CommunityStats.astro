---
import { Card, CardHeader, CardTitle, CardDescription, CardContent } from './ui/card';

const stats = [
  { label: "GitHub Stars", value: "3.4k+", icon: "star", url: "https://github.com/posit-dev/positron/stargazers" },
  { label: "Contributors", value: "100+", icon: "users", url: "https://github.com/posit-dev/positron/graphs/contributors" },
  { label: "Active Discussions", value: "50+", icon: "message", url: "https://github.com/posit-dev/positron/discussions" },
  { label: "Languages", value: "Python & R", icon: "code" }
];
---

<section class="py-24 bg-white">
  <div class="container mx-auto px-4">
    <div class="max-w-6xl mx-auto">
      <div class="text-center mb-12">
        <h2 class="text-3xl md:text-4xl font-bold mb-4">Join the Community</h2>
        <p class="text-xl text-muted-foreground">
          Connect with thousands of data scientists and developers who are building the future with Positron.
        </p>
      </div>
      
      <!-- Main Cards Grid -->
      <div class="grid md:grid-cols-3 gap-8 mb-16 auto-rows-fr">
        <!-- GitHub Card -->
        <Card class="group hover:shadow-xl transition-all duration-300 hover:-translate-y-1 border-gray-100 flex flex-col">
          <CardHeader>
            <div class="w-12 h-12 rounded-lg bg-gray-900 p-2.5 mb-4 group-hover:scale-110 transition-transform duration-300">
              <svg class="w-full h-full text-white" fill="currentColor" viewBox="0 0 24 24">
                <path d="M12 0c-6.626 0-12 5.373-12 12 0 5.302 3.438 9.8 8.207 11.387.599.111.793-.261.793-.577v-2.234c-3.338.726-4.033-1.416-4.033-1.416-.546-1.387-1.333-1.756-1.333-1.756-1.089-.745.083-.729.083-.729 1.205.084 1.839 1.237 1.839 1.237 1.07 1.834 2.807 1.304 3.492.997.107-.775.418-1.305.762-1.604-2.665-.305-5.467-1.334-5.467-5.931 0-1.311.469-2.381 1.236-3.221-.124-.303-.535-1.524.117-3.176 0 0 1.008-.322 3.301 1.23.957-.266 1.983-.399 3.003-.404 1.02.005 2.047.138 3.006.404 2.291-1.552 3.297-1.23 3.297-1.23.653 1.653.242 2.874.118 3.176.77.84 1.235 1.911 1.235 3.221 0 4.609-2.807 5.624-5.479 5.921.43.372.823 1.102.823 2.222v3.293c0 .319.192.694.801.576 4.765-1.589 8.199-6.086 8.199-11.386 0-6.627-5.373-12-12-12z"/>
              </svg>
            </div>
            <CardTitle class="text-xl">GitHub</CardTitle>
            <CardDescription>Open source & contributions</CardDescription>
          </CardHeader>
          <CardContent class="flex flex-col flex-1">
            <div class="space-y-2 mb-6 flex-grow min-h-[120px]">
              <div class="flex justify-between items-center">
                <span class="text-muted-foreground">Stars</span>
                <span class="font-semibold flex items-center">
                  <svg class="w-4 h-4 text-yellow-500 mr-1" fill="currentColor" viewBox="0 0 20 20">
                    <path d="M9.049 2.927c.3-.921 1.603-.921 1.902 0l1.07 3.292a1 1 0 00.95.69h3.462c.969 0 1.371 1.24.588 1.81l-2.8 2.034a1 1 0 00-.364 1.118l1.07 3.292c.3.921-.755 1.688-1.54 1.118l-2.8-2.034a1 1 0 00-1.175 0l-2.8 2.034c-.784.57-1.838-.197-1.539-1.118l1.07-3.292a1 1 0 00-.364-1.118L2.98 8.72c-.783-.57-.38-1.81.588-1.81h3.461a1 1 0 00.951-.69l1.07-3.292z"/>
                  </svg>
                  3.4k
                </span>
              </div>
              <div class="flex justify-between items-center">
                <span class="text-muted-foreground">Forks</span>
                <span class="font-semibold flex items-center">
                  <svg class="w-4 h-4 text-gray-500 mr-1" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M7 12l3-3 3 3 4-4M8 21l4-4 4 4M3 4h18M4 4h16v12a1 1 0 01-1 1H5a1 1 0 01-1-1V4z"/>
                  </svg>
                  108
                </span>
              </div>
              <div class="flex justify-between items-center">
                <span class="text-muted-foreground">Contributors</span>
                <span class="font-semibold">100+</span>
              </div>
            </div>
            <a 
              href="https://github.com/posit-dev/positron"
              target="_blank"
              rel="noopener noreferrer"
              class="block w-full text-center px-4 py-2 bg-gray-100 hover:bg-gray-200 rounded-lg transition-colors font-medium"
            >
              View Repository
            </a>
          </CardContent>
        </Card>

        <!-- Discussions Card -->
        <Card class="group hover:shadow-xl transition-all duration-300 hover:-translate-y-1 border-gray-100 flex flex-col">
          <CardHeader>
            <div class="w-12 h-12 rounded-lg bg-posit-blue p-2.5 mb-4 group-hover:scale-110 transition-transform duration-300">
              <svg class="w-full h-full text-white" fill="none" stroke="currentColor" stroke-width="2" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" d="M8 12h.01M12 12h.01M16 12h.01M21 12c0 4.418-4.03 8-9 8a9.863 9.863 0 01-4.255-.949L3 20l1.395-3.72C3.512 15.042 3 13.574 3 12c0-4.418 4.03-8 9-8s9 3.582 9 8z"/>
              </svg>
            </div>
            <CardTitle class="text-xl">Discussions</CardTitle>
            <CardDescription>Community support & ideas</CardDescription>
          </CardHeader>
          <CardContent class="flex flex-col flex-1">
            <div class="space-y-2 mb-6 flex-grow min-h-[120px]">
              <div class="flex items-center text-sm">
                <span class="mr-2">üí°</span>
                <span class="text-muted-foreground">Feature requests & feedback</span>
              </div>
              <div class="flex items-center text-sm">
                <span class="mr-2">üêõ</span>
                <span class="text-muted-foreground">Bug reports & troubleshooting</span>
              </div>
              <div class="flex items-center text-sm">
                <span class="mr-2">üöÄ</span>
                <span class="text-muted-foreground">Best practices & tips</span>
              </div>
            </div>
            <a 
              href="https://github.com/posit-dev/positron/discussions"
              target="_blank"
              rel="noopener noreferrer"
              class="block w-full text-center px-4 py-2 bg-posit-blue text-white hover:bg-posit-blue-dark rounded-lg transition-colors font-medium"
            >
              Join Discussions
            </a>
          </CardContent>
        </Card>

        <!-- Documentation Card -->
        <Card class="group hover:shadow-xl transition-all duration-300 hover:-translate-y-1 border-gray-100 flex flex-col">
          <CardHeader>
            <div class="w-12 h-12 rounded-lg bg-gradient-to-r from-purple-600 to-pink-600 p-2.5 mb-4 group-hover:scale-110 transition-transform duration-300">
              <svg class="w-full h-full text-white" fill="none" stroke="currentColor" stroke-width="2" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" d="M12 6.253v13m0-13C10.832 5.477 9.246 5 7.5 5S4.168 5.477 3 6.253v13C4.168 18.477 5.754 18 7.5 18s3.332.477 4.5 1.253m0-13C13.168 5.477 14.754 5 16.5 5c1.747 0 3.332.477 4.5 1.253v13C19.832 18.477 18.247 18 16.5 18c-1.746 0-3.332.477-4.5 1.253"/>
              </svg>
            </div>
            <CardTitle class="text-xl">Documentation</CardTitle>
            <CardDescription>Guides & API reference</CardDescription>
          </CardHeader>
          <CardContent class="flex flex-col flex-1">
            <div class="space-y-2 mb-6 flex-grow min-h-[120px]">
              <div class="flex items-center text-sm">
                <span class="mr-2">üìö</span>
                <span class="text-muted-foreground">Getting started guide</span>
              </div>
              <div class="flex items-center text-sm">
                <span class="mr-2">‚öôÔ∏è</span>
                <span class="text-muted-foreground">Configuration options</span>
              </div>
              <div class="flex items-center text-sm">
                <span class="mr-2">üéØ</span>
                <span class="text-muted-foreground">Advanced features</span>
              </div>
            </div>
            <a 
              href="https://positron.posit.co/start.html"
              target="_blank"
              rel="noopener noreferrer"
              class="block w-full text-center px-4 py-2 bg-gradient-to-r from-purple-600 to-pink-600 text-white hover:opacity-90 rounded-lg transition-opacity font-medium"
            >
              Read Docs
            </a>
          </CardContent>
        </Card>
      </div>

      <!-- Statistics Bar -->
      <div class="bg-gradient-to-r from-posit-blue to-blue-600 rounded-xl p-8 text-white">
        <div class="grid grid-cols-2 md:grid-cols-4 gap-8 text-center">
          {stats.map((stat, index) => (
            stat.url ? (
              <a 
                key={index}
                href={stat.url}
                target="_blank"
                rel="noopener noreferrer"
                class="animate-fadeInUp group hover:scale-105 transition-transform"
                style={`animation-delay: ${index * 100}ms`}
              >
                <div class="text-3xl md:text-4xl font-bold mb-1 group-hover:underline">{stat.value}</div>
                <div class="text-sm md:text-base opacity-90">{stat.label}</div>
              </a>
            ) : (
              <div key={index} class="animate-fadeInUp" style={`animation-delay: ${index * 100}ms`}>
                <div class="text-3xl md:text-4xl font-bold mb-1">{stat.value}</div>
                <div class="text-sm md:text-base opacity-90">{stat.label}</div>
              </div>
            )
          ))}
        </div>
      </div>
    </div>
  </div>
</section>

<style>
  .animate-fadeInUp {
    opacity: 0;
    animation: fadeInUp 0.6s ease-out forwards;
  }
  
  @keyframes fadeInUp {
    from {
      opacity: 0;
      transform: translateY(20px);
    }
    to {
      opacity: 1;
      transform: translateY(0);
    }
  }
</style>