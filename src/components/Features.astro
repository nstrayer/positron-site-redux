---
import { Card, CardHeader, CardTitle, CardDescription, CardContent } from './ui/card';

const features = [
  {
    title: "Built on VS Code",
    description: "Leverage the power and extensibility of Visual Studio Code with specialized data science features.",
    icon: "code",
    gradient: "from-blue-600 to-cyan-600"
  },
  {
    title: "Polyglot Support",
    description: "Write code in Python, R, SQL, and more. Switch seamlessly between languages in a single project.",
    icon: "languages",
    gradient: "from-purple-600 to-pink-600"
  },
  {
    title: "Data Explorer",
    description: "Explore your data with an intuitive, spreadsheet-like interface. Filter, sort, and visualize with ease.",
    icon: "table",
    gradient: "from-green-600 to-teal-600"
  },
  {
    title: "Interactive Console",
    description: "Execute code interactively with rich output support. Perfect for exploratory data analysis.",
    icon: "terminal",
    gradient: "from-orange-600 to-red-600"
  },
  {
    title: "Environment Management",
    description: "Manage Python and R environments effortlessly. Switch between different versions and packages.",
    icon: "package",
    gradient: "from-indigo-600 to-purple-600"
  },
  {
    title: "Reproducible Publishing",
    description: "Create reports, dashboards, and applications with Quarto, Shiny, and Jupyter integration.",
    icon: "document",
    gradient: "from-pink-600 to-rose-600"
  }
];

const iconPaths = {
  code: "M14 2H6a2 2 0 0 0-2 2v16a2 2 0 0 0 2 2h12a2 2 0 0 0 2-2V8z M14 2v6h6 M10 15l-2 2 2 2 M14 15l2 2-2 2",
  languages: "M12.87 15.07l-2.54-2.51.03-.03c1.74-1.94 2.98-4.17 3.71-6.53H17V4h-7V2H8v2H1v1.99h11.17C11.5 7.92 10.44 9.75 9 11.35 8.07 10.32 7.3 9.19 6.69 8h-2c.73 1.63 1.73 3.17 2.98 4.56l-5.09 5.02L4 19l5-5 3.11 3.11.76-2.04zM18.5 10h-2L12 22h2l1.12-3h4.75L21 22h2l-4.5-12zm-2.62 7l1.62-4.33L19.12 17h-3.24z",
  table: "M3 3h18v18H3V3zm16 16V5H5v14h14zM7 7h2v2H7V7zm4 0h2v2h-2V7zm4 0h2v2h-2V7zM7 11h2v2H7v-2zm4 0h2v2h-2v-2zm4 0h2v2h-2v-2zM7 15h2v2H7v-2zm4 0h2v2h-2v-2zm4 0h2v2h-2v-2z",
  terminal: "M4 4h16a2 2 0 0 1 2 2v12a2 2 0 0 1-2 2H4a2 2 0 0 1-2-2V6a2 2 0 0 1 2-2z M7 10l3 3-3 3 M13 17h5",
  package: "M21 16V8a2 2 0 0 0-1-1.73l-7-4a2 2 0 0 0-2 0l-7 4A2 2 0 0 0 3 8v8a2 2 0 0 0 1 1.73l7 4a2 2 0 0 0 2 0l7-4A2 2 0 0 0 21 16z M3.27 6.96L12 12.01l8.73-5.05 M12 22.08V12",
  document: "M14 2H6a2 2 0 0 0-2 2v16a2 2 0 0 0 2 2h12a2 2 0 0 0 2-2V8z M14 2v6h6 M16 13H8 M16 17H8 M10 9H8"
};
---

<section id="features" class="py-24 bg-gradient-to-b from-white to-gray-50">
  <div class="container mx-auto px-4">
    <div class="mb-16">
      <h2 class="text-4xl md:text-5xl font-bold text-gray-900 mb-4">
        Everything you need for data science
      </h2>
      <p class="text-xl text-muted-foreground max-w-3xl">
        Positron combines the power of VS Code with specialized tools designed specifically for data scientists and analysts.
      </p>
    </div>
    
    <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-8">
      {features.map((feature, index) => (
        <Card 
          className={`group hover:shadow-xl transition-all duration-300 hover:-translate-y-1 border-gray-100 animate-fadeInUp`}
          style={{ animationDelay: `${index * 100}ms` }}
        >
          <CardHeader>
            <div class={`w-12 h-12 rounded-lg bg-gradient-to-r ${feature.gradient} p-2.5 mb-4 group-hover:scale-110 transition-transform duration-300`}>
              <svg 
                class="w-full h-full text-white" 
                fill="none" 
                stroke="currentColor" 
                strokeWidth="2"
                strokeLinecap="round" 
                strokeLinejoin="round"
                viewBox="0 0 24 24"
              >
                <path d={iconPaths[feature.icon]} />
              </svg>
            </div>
            <CardTitle class="text-xl">{feature.title}</CardTitle>
          </CardHeader>
          <CardContent>
            <CardDescription class="text-base">
              {feature.description}
            </CardDescription>
          </CardContent>
        </Card>
      ))}
    </div>
    
    <div class="mt-16 text-center">
      <a 
        href="#demo" 
        class="inline-flex items-center text-primary hover:text-primary/80 font-medium transition-colors group"
      >
        See it in action
        <svg 
          class="ml-2 h-4 w-4 group-hover:translate-x-1 transition-transform" 
          fill="none" 
          stroke="currentColor" 
          viewBox="0 0 24 24"
        >
          <path strokeLinecap="round" strokeLinejoin="round" strokeWidth={2} d="M9 5l7 7-7 7" />
        </svg>
      </a>
    </div>
  </div>
</section>

<style>
  .animate-fadeInUp {
    opacity: 0;
    animation: fadeInUp 0.6s ease-out forwards;
  }
  
  @keyframes fadeInUp {
    from {
      opacity: 0;
      transform: translateY(20px);
    }
    to {
      opacity: 1;
      transform: translateY(0);
    }
  }
</style>